 <script>
 	jQuery(function(){
      jQuery('.dod').click(function(e){
      	  
      	  if(jQuery('input[name="dod[]"]:checked').length > 10){
      	    alert("You can choose only 10 deals.");
      	  	e.preventDefault();
      	  	return false;
      	  }
      });
 	});

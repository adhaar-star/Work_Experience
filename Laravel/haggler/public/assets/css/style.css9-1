}

#opened-conversation, #conversation-list-container {
  height: 270px;
  overflow-y:scroll;
}

.nav > li > a.active {
  background-color: #eee;
  text-decoration: none;
  color: #23527c !important;
}

#selected-categories {
  border: 1px solid #eee;
  padding: 10px;
}
#selected-categories > ul {

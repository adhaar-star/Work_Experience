.cat-tree-parent  li p.content {
  padding: 20px;
}
.cat-tree-parent li p.content span {
  float: left;
  margin: 0 20px 0 0;
}
.cat-tree-parent  li ul {
  margin-left: 30px;
}

.cat-tree-parent  li ul li ul {
   margin-left: 60px;
}

.cat-tree-parent  li ul li div {
  background-color: #bbb;
}

.cat-tree-parent  li ul li ul li div {
  background-color: #eee;
}

.widget {
  background-color: #eee;
  border:1px solid #e5e5e5;
}

.conversation-list, #opened-conversation-list {
  width: 100%;
  float: left;
  list-style: none;
  padding: 0;
  margin: 0;
}

.conversation-list > li {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
  padding: 10px;
  background:#f2f2f2;
  width: 100%;
  float: left;
}

.conversation-list > li:last-child {
  border-bottom: 1px solid transparent;
}

#opened-conversation-list > li {
  border-bottom: 1px solid #eee;
  margin-top: 10px;
  padding: 10px;
  background:#f2f2f2;

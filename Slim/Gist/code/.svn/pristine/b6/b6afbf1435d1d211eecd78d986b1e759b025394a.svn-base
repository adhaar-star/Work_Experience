                me.removeClass('open_menu').addClass('close_menu');
                $('body').removeClass('menu_visible');
            } else {
                me.removeClass('close_menu').addClass('open_menu');
            }

            setTimeout(function() {
                me.removeClass('animate_menu');
            }, 1000);
        });

